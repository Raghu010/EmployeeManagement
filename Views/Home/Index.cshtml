@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
    
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Image/" + (employee.PhotoPath ?? "noimage.jpg");
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">View</a> @*Note: This is a TagHelper.*@

                @*<a href="@Url.Action("Details", "Home", new { id = employee.Id})" class="btn btn-primary">Show</a>*@ @*Note: If you want href element as a string then use @Url.Action() as shown.*@
                @*@Html.ActionLink("Views", "Details", "Home", new { employee.Id })*@ @*Note: Here we are using link method to generate the hyperlinks*@

                <a href="/home/details/@employee.Id" class="btn btn-primary m-1">View</a> @*Note: Here we are manually specifing the path without using any hyperlinks*@
                <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-primary m-1">Delete</a>
            </div>
        </div>
    }
</div>


